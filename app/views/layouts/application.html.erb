<!DOCTYPE html>
<html>
  <head>
    <title>Bencana</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name == 'admin' ? 'admin-body' : '' %>">
      <%= render (controller_name == 'admin' ? 'admin/layout' : 'pages/layout') %>
    <%= yield %>
  </body>
</html>
